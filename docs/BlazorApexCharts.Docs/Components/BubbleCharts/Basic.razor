<ChartContainer>
    <ApexChart TItem="Order"
               Title="Order Net Value"
               
    Debug>

      <ApexBubbleSeries TItem="Order"
                    Items="Orders"
                    Name="Gross Value"
                    XValue="@(e => e.Country)"
                    YAggregate="@(e => e.Sum(e => e.GrossValue))"
                    ZAggregate="@(e => e.Average(e => e.DiscountPrecentage))"
                     />

       <ApexBubbleSeries TItem="Order"
                    Items="Orders"
                    Name="Net  Value"
                    XValue="@(e => e.Country)"
                    YAggregate="@(e => e.Sum(e => e.NetValue))"
                    ZAggregate="@(e => e.Average(e => e.DiscountPrecentage))"
                     />

