<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RazorLangVersion>3.0</RazorLangVersion>
    <Version>0.1.0-Alpha</Version>
    <Authors>Joakim Dangården</Authors>
    <Company />
    <Description>A blazor wrapper for Apex Charts</Description>
    <PackageTags>Blazor Charts ApexCharts</PackageTags>
    <RepositoryUrl>https://github.com/joadan/Blazor-ApexCharts</RepositoryUrl>
    <PackageProjectUrl>https://github.com/joadan/Blazor-ApexCharts</PackageProjectUrl>
    <Copyright>Copyright 2020 (c) Joakim Dangården. All rights reserved.</Copyright>
  </PropertyGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="3.1.2" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="3.1.2" />
  </ItemGroup>


  <ItemGroup>
    <Content Update="wwwroot\js\apex-charts.min.js">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
